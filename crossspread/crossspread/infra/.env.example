# CrossSpread Environment Configuration
# Copy this file to .env and configure all values

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
TZ=UTC+2

# =============================================================================
# Database (PostgreSQL + TimescaleDB)
# =============================================================================
DB_USER=crossspread
DB_PASS=changeme
DB_NAME=crossspread
DB_HOST=postgres
DB_PORT=5432

# Full connection URL (used by Prisma and Python services)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT secret key - use a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiry in seconds (86400 = 24 hours)
JWT_EXPIRY=86400

# API Key Encryption Key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY_BASE64=CHANGE_THIS_TO_A_REAL_32_BYTE_BASE64_KEY==

# =============================================================================
# Market Data Ingestion
# =============================================================================
# Comma-separated list of exchanges to enable
ENABLED_EXCHANGES=binance,bybit,okx

# Prometheus metrics port for md-ingest service
METRICS_PORT=9090

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Execution Service
# =============================================================================
EXEC_SERVICE_HOST=execution
EXEC_SERVICE_PORT=9000

# Rust log level
RUST_LOG=info

# Default slicing configuration
DEFAULT_SLICE_SIZE_PCT=5
DEFAULT_SLICE_INTERVAL_MS=100

# =============================================================================
# Backtest Service
# =============================================================================
BACKTEST_PORT=8002

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# Observability (Optional)
# =============================================================================
# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# Exchange API Keys (Per-User, stored encrypted in database)
# These are example keys for development/testing only
# In production, users enter their own keys via the UI
# =============================================================================
# BINANCE_API_KEY=your_api_key
# BINANCE_API_SECRET=your_api_secret
# BYBIT_API_KEY=your_api_key
# BYBIT_API_SECRET=your_api_secret
# OKX_API_KEY=your_api_key
# OKX_API_SECRET=your_api_secret
# OKX_PASSPHRASE=your_passphrase
