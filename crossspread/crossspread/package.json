{
  "name": "crossspread",
  "version": "1.0.0",
  "description": "Futures Arbitrage SaaS Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "web/*"
  ],
  "scripts": {
    "dev": "docker-compose -f infra/docker-compose.yml up",
    "dev:build": "docker-compose -f infra/docker-compose.yml up --build",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "db:migrate": "cd services/backend-api && npm run db:migrate",
    "db:seed": "cd services/backend-api && npm run seed:admin",
    "clean": "rimraf node_modules dist coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
